  <li><a href="/users">Users</a></li>
  <li><a href="/photos">Photos</a></li>
</ul>

<h1>List of photos</h1>

<form action="/insert_user_record">
  <label for="browser_input">Image</label>
  <input id="browser_input" type="text" name="input_image" 
    placeholder="Enter a URL for the image...">
  
  <label for="browser_caption">Caption</label>
  <input id="browser_caption" type="text" name="input_caption" 
    placeholder="Enter a caption for the photo...">
  
  <label for="browser_user_id">Owner ID</label>
  <input id="browser_user_id" type="text" name="input_owner_id" 
    placeholder="Enter an ID of a User...">
  <button>Add photo</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th>Details</th>
  </tr>

  <% @list_of_photos.each do |a_thing| %>
    <tr>
    <td><img src="<%= a_thing.image %>"></td>
    <td><%= a_thing.caption %></td>
    <td><%= a_thing.poster.username %></td>
    <td><%= a_thing.updated_at %></td>
    <% details_link = "/photos/" + a_thing.id.to_s %>
    <td><a href=<%= details_link %>>Show details</a></td>
    </tr>
  <% end %>

  </table>