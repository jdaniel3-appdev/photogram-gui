<h1>
  Photo Details
</h1>

<dl>
  <dt>
    Image
  </dt>
  <dd>
    <img src=<%= @the_photo.image %>></a>
  </dd>
  <dt>
    Caption
  </dt>
  <dd>
    <%= @the_photo.caption %>
  </dd>
  <dt>
    Owner
  </dt>
  <dd>
    <%= @the_photo.poster.username %>
  </dd>
  <dt>
    Posted
  </dt>
  <dd>
    <%= @the_photo.updated_at %>
  </dd>
  
  <dt>
    Edit photo
  </dt>
  <dd>
      <form action="/update_photo/<%= @the_photo.id %>">
      <label for="browser_input">Image</label>
      <input id="browser_input" type="text" name="input_image" 
        placeholder="Enter a URL for the image..." value=<%= @the_photo.image %>>
  
      <label for="browser_caption">Caption</label>
      <textarea id="browser_caption" type="text" name="input_caption" 
        placeholder=<%= @the_photo.caption %>></textarea>
  
      <button>Update photo</button>
    </form>
  </dd>

  <dt>
    Delete photo
  </dt>
  <dd>
    <a href="/delete_photo/<%= @the_photo.id.to_s %>">Delete this photo</a>
  </dd>

</dl>

<h2>
  Comments
</h2>

<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>

  <% @the_photo.comments.each do |a_thing| %>
    <tr>
    <td><%= a_thing.commenter.username %></td>
    <td><%= a_thing.body %></td>
    <td><%= a_thing.updated_at %></td>
    </tr>
  <% end %>

  </table>

  <h3>
    Add a new comment
  </h3>

  <form action="/insert_comment_record">
    <label for="browser_photo_id">Photo ID</label>
    <input id="browser_photo_id" type="text" value=<%= @the_photo.id.to_s %> name="input_photo_id">
    
    <label for="browser_author_id">Author ID</label>
    <input id="browser_author_id" type="text" name="input_author_id">
    
    <label for="browser_comment">Comment</label>
    <textarea id="browser_comment" name="input_body" 
      placeholder="Enter a comment..."></textarea>
    <button type="submit">Add comment</button>
  </form>